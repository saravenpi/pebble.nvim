filters:
  or:
    - file.ext == "md"
    - file.ext == "markdown"

formulas:
  size_kb: 'string.format("%.2f", file.size / 1024)'
  name_length: 'string.len(file.name)'

display:
  name:
    displayName: "File"
  ext:
    displayName: "Type"
  formula.size_kb:
    displayName: "Size (KB)"
  formula.name_length:
    displayName: "Name Length"

views:
  - type: table
    name: "Markdown Files"
    limit: 20
    order:
      - name